<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            android:layout_gravity="fill"
            android:contentDescription="@string/movie_content_desc"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_movie_placeholder" />

        <TextView
            android:id="@+id/genre"
            style="@style/MovieInfoTextAppearance"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/default_margin"
            tools:text="History" />

        <TextView
            android:id="@+id/title_year"
            style="@style/MovieInfoTextAppearance"
            android:layout_width="@dimen/movie_title_width"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            tools:text="Dunkirk (2017)" />

    </FrameLayout>

</layout>
